{
    "executor": "python main.py",
    // Which GPUs do you want to use?
    //     - []          CUDA_VISIBLE_DEVICES="" (not set)
    //     - -1          CUDA_VISIBLE_DEVICES=-1 (do not use GPU)
    //     - [0, 1, 2]   CUDA_VISIBLE_DEVICES=<ManyTasks will allocate device>
    "cuda": [0, 1, 2],
    // How many processes will be run in parallel?
    //     - "#CPU" (number of CPUs)
    //     - "#CUDA" (number of CUDA devices)
    //     - an integer
    "concurrency": 4,
    // How many GPUs will be used for each task?
    "cuda_per_task": 1,
    "configs": {
        "==base==": [
            // You can pass an arg without a key
            "wmt14", 
            // You can pass a list
            "--arch", ["lstm", "transformer"],
            // You can even pass a python script which returns an iterable
            "--layer", "$<range(2,6,2)>",
            "--fp16",
            "--fix-embedding", ["$_ON_", "$_OFF_"]
        ],
        "==more==": [
            [
                "--opt", "adam",
                "--lr", ["1e-2", "5e-4"],
                "--decay", ["0.01"]
            ],
            [
                "--opt", ["sgd", "adagrad"],
                "--lr", ["1e-1"]
            ]
        ]
    }
}