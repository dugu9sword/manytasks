{
    "executor": "echo",
    "cuda": [0, 1, 2, 3],
    "concurrency": 2,
    "cuda_per_task": 2,
    "configs": {
        "==base==": [
            "data"
        ],
        "==more==": [
            [
                "--k", "$<a|b|c>",
                "--save", "ckpts/${k}"
            ],
            [
                "--k", "$<a|b|c>:$<a|b|c>",
                "--save", "ckpts/${k}"
            ],
            [   
                "--k", "$<7:14:2;4>",
                "--flag",   
                "--save", "ckpts/${k[2:]}"
            ],
            [   
                "--k", "$<99:101>",
                "--switchable-flag", "$<?>"
            ],
            [
                "--save", "ckpts/${1}"
            ]
        ]
    }
}